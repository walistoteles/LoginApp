<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginApp.Views.LoginPage" NavigationPage.HasNavigationBar="False"
             BackgroundColor="Purple">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <StackLayout VerticalOptions="CenterAndExpand" Padding="30" BackgroundColor="White" >
                <Label Text="Walibank" TextColor="Purple" HorizontalOptions="CenterAndExpand" FontSize="Title" FontAttributes="Bold"/>
                <Entry x:Name="Email" Placeholder="Email" PlaceholderColor="Purple" Keyboard="Email"/>
                <Entry x:Name="Password" Placeholder="Senha" IsPassword="True" PlaceholderColor="Purple"/>
                <Button Text="Login" Clicked="Button_Clicked" BackgroundColor="Purple" TextColor="White"/>
                <StackLayout/>
             
                <Button Text="Register" Clicked="Button_Clicked_1" BackgroundColor="Purple" TextColor="White"/>



                <FlexLayout HorizontalOptions="StartAndExpand" >
                    <CheckBox x:Name="LembrarUser" Color="#2B2D42"/>
                    <Label Text="Lembrar Usuário" VerticalOptions="Center" FontSize="16" TextColor="Purple" Margin="4,4"/>

                </FlexLayout>
            </StackLayout>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>