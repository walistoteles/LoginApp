<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginApp.Views.LoginPage" NavigationPage.HasNavigationBar="False"
             BackgroundColor="#6503A6">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <StackLayout VerticalOptions="CenterAndExpand" Padding="30" BackgroundColor="White" >
                <Label Text="Walibank" TextColor="#6503A6" HorizontalOptions="CenterAndExpand" FontSize="Title" FontAttributes="Bold"/>
                <Entry x:Name="Email" Placeholder="Email" PlaceholderColor="#6503A6" Keyboard="Email"/>
                <Entry x:Name="Password" Placeholder="Senha" IsPassword="True" PlaceholderColor="#6503A6"/>
                <Button Text="Login" Clicked="Button_Clicked" BackgroundColor="#6503A6" TextColor="#EAD8F2"/>
                <StackLayout/>

                <Button Text="Register" Clicked="Button_Clicked_1" BackgroundColor="#6503A6" TextColor="#EAD8F2"/>



                <FlexLayout HorizontalOptions="StartAndExpand" >
                    <CheckBox x:Name="LembrarUser" Color="#2B2D42"/>
                    <Label Text="Lembrar Usuário" VerticalOptions="Center" FontSize="16" TextColor="#6503A6" Margin="4,4"/>

                </FlexLayout>
            </StackLayout>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>