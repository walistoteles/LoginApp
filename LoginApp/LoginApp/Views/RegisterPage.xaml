<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginApp.Views.RegisterPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">

            <StackLayout VerticalOptions="Center">
                <Label Text="Walibank" TextColor="Purple" HorizontalOptions="CenterAndExpand" FontSize="Title" FontAttributes="Bold"/>
                <Label Text="Register Page"  TextColor="Purple" HorizontalOptions="CenterAndExpand" FontSize="Subtitle" FontAttributes="Bold"/>


                <StackLayout VerticalOptions="CenterAndExpand" Padding="20">

                    <Entry x:Name="Name" Placeholder="Nome Completo" PlaceholderColor="Purple"/>
                    <Entry x:Name="Email" Placeholder="Email" PlaceholderColor="Purple" Keyboard="Email"/>
                    <Entry x:Name="Password" Placeholder="Password" PlaceholderColor="Purple" IsPassword="True"/>
                    <Button Text="Register" Clicked="Button_Clicked" BackgroundColor="Purple" TextColor="White"/>


                </StackLayout>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>